rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAdmin() {
      return request.auth != null && request.auth.token.role == 'admin';
    }

    function isOwner() {
      return request.auth != null && request.auth.token.role == 'owner';
    }

    function isFacilityOwner(facilityId) {
      return request.auth != null && (
        isAdmin() || 
        (isOwner() && exists(/databases/$(database)/documents/facilities/$(facilityId)) &&
         get(/databases/$(database)/documents/facilities/$(facilityId)).data.ownerId == request.auth.uid)
      );
    }
    
    function isValidImage() {
      return request.resource.size < 5 * 1024 * 1024 // 5MB max
        && request.resource.contentType.matches('image/.*'); // Only images
    }

    // Allow public read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }

    // Admin folders - only admins can write
    match /licenses/{fileName} {
      allow write: if isAdmin() && isValidImage();
      allow delete: if isAdmin();
    }

    match /insurances/{fileName} {
      allow write: if isAdmin() && isValidImage();
      allow delete: if isAdmin();
    }

    match /locations/{fileName} {
      allow write: if isAdmin() && isValidImage();
      allow delete: if isAdmin();
    }

    // Facility files - admins and owners can write to their own facilities
    match /facilities/{facilityId}/{allPaths=**} {
      allow write: if request.auth != null 
        && isValidImage()
        && (isAdmin() || isFacilityOwner(facilityId));
      allow delete: if request.auth != null 
        && (isAdmin() || isFacilityOwner(facilityId));
    }
  }
}
