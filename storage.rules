rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAdmin() {
      return request.auth != null 
        && request.auth.token != null 
        && request.auth.token.role == 'admin';
    }
    
    function isValidImage() {
      return request.resource.size < 5 * 1024 * 1024 // 5MB max
        && request.resource.contentType.matches('image/.*'); // Only images
    }

    // Allow public read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }

    // Admin folders - only admins can write
    match /licenses/{fileName} {
      allow read: if true;
      allow write, delete: if isAdmin();
    }

    match /insurances/{fileName} {
      allow read: if true;
      allow write, delete: if isAdmin();
    }

    match /locations/{fileName} {
      allow read: if true;
      allow write, delete: if isAdmin();
    }

    // Facilities folder - owners and admins can write
    match /facilities/{facilityId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null 
        && isValidImage()
        && (
          request.auth.uid == facilityId || // Owner
          isAdmin() // Admin
        );
      allow delete: if request.auth != null 
        && (
          request.auth.uid == facilityId || // Owner
          isAdmin() // Admin
        );
    }
  }
}
