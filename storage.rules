rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAdmin() {
      return request.auth != null && 
        (request.auth.token.role == 'admin' || 
         request.auth.token.admin == true ||
         request.auth.token.isAdmin == true);
    }
    
    function isOwner(facilityId) {
      return request.auth != null && 
        (get(/databases/$(database)/documents/facilities/$(facilityId)).data.ownerId == request.auth.uid);
    }
    
    function isValidImage() {
      return request.resource.size < 5 * 1024 * 1024 // 5MB max
        && request.resource.contentType.matches('image/.*'); // Only images
    }

    // Allow public read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }

    // Admin folders - only admins can write
    match /licenses/{fileName} {
      allow write: if isAdmin() && isValidImage();
      allow delete: if isAdmin();
    }

    match /insurances/{fileName} {
      allow write: if isAdmin() && isValidImage();
      allow delete: if isAdmin();
    }

    match /locations/{fileName} {
      allow write: if isAdmin() && isValidImage();
      allow delete: if isAdmin();
    }

    // Facilities folder - owners and admins can write
    match /facilities/{facilityId}/{fileName} {
      allow write: if request.auth != null 
        && isValidImage()
        && (
          isOwner(facilityId) || // Owner
          isAdmin() // Admin
        );
      allow delete: if request.auth != null && 
        (isOwner(facilityId) || isAdmin());
    }

    // Logos folder - owners and admins can write
    match /logos/{facilityId}/{fileName} {
      allow write: if request.auth != null 
        && isValidImage()
        && (
          isOwner(facilityId) || // Owner
          isAdmin() // Admin
        );
      allow delete: if request.auth != null && 
        (isOwner(facilityId) || isAdmin());
    }
  }
}
