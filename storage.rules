rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAdmin() {
      return request.auth != null && 
        (request.auth.token.role == 'admin' || 
         request.auth.token.admin == true ||
         request.auth.email == 'admin@beginrecovery.com');
    }
    
    function isValidImage() {
      return request.resource.size < 5 * 1024 * 1024 // 5MB max
        && request.resource.contentType.matches('image/.*'); // Only images
    }

    // Allow public read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }

    // Admin folders - only admins can write
    match /licenses/{fileName} {
      allow write: if isAdmin() && isValidImage();
      allow delete: if isAdmin();
    }

    match /insurances/{fileName} {
      allow write: if isAdmin() && isValidImage();
      allow delete: if isAdmin();
    }

    match /locations/{fileName} {
      allow write: if isAdmin() && isValidImage();
      allow delete: if isAdmin();
    }

    // Facilities folder - owners and admins can write
    match /facilities/{facilityId}/{allPaths=**} {
      allow write: if request.auth != null 
        && isValidImage()
        && (isAdmin() || request.auth.token.role == 'owner');
      allow delete: if request.auth != null 
        && (isAdmin() || request.auth.token.role == 'owner');
    }
  }
}
